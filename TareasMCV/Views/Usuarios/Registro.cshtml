@model RegistroViewModel
@{
    ViewData["Title"] = "Registro";
}

<h1>Regístrate</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-success">Regístrate</button>
            <a class="btn btn-secondary" asp-action="login">Deseo Loguearme</a>

            <a class="btn btn-primary" asp-action="LoginExterno" asp-route-proveedor="Microsoft"><i class="bi bi-microsoft"></i> Continuar con Microsoft</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}  